# -*- mode: conf; -*-

# Wait 60 seconds before timing out a connection
connect-timeout = 60

# Retry three times for transient errors
retry = 3

# Abort if speed is slower than one byte per second (basically inactivity) for 60 seconds
speed-limit = 1
speed-time = 60

# Disguise as Microsoft Edge on Windows 10 RTM build 10240
# https://stackoverflow.com/questions/30591706/what-is-the-user-agent-string-name-for-microsoft-edge#comment51512293_31279980
user-agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/42.0.2311.135 Safari/537.36 Edge/12.10240"
