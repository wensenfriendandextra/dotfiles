# Turn on recognition of the 'Content-Disposition' HTTP header.
content_disposition = on

# Resume partial downloads.
continue = on

# Disallow retrieving outside the directory hierarchy when downloading recursively.
no_parent = on

# Consider "connection refused" a transient error, and retry.
retry_connrefused = on

# I'm not a search engine crawler.
robots = off

# DNS timeout, connect timeout, and read timeout. Default is an insane 900 seconds.
timeout = 60

# Use the last component of a redirection URL for the local file name.
trust_server_names = on

# Disguise as Chrome 55.0.2883.95 on macOS 10.12.2
user_agent = 'Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/55.0.2883.95 Safari/537.36'
