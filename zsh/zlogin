# -*- mode: sh; -*-

# print available disk space on OS X
if [[ $OSTYPE == darwin* ]]; then
    echo "${BLUE}available disk space:  ${BOLD}${RED}$(df -h | awk '/\/dev\/disk1/ {print $4" / "$2}')${RESET}"
fi

# source per-host overrides
[[ -e ${XDG_CONFIG_HOME:-$HOME/.config}/zsh/perhostlogin ]] && source ${XDG_CONFIG_HOME:-$HOME/.config}/zsh/perhostlogin
